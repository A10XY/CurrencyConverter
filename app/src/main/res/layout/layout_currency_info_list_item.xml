<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/row_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:id="@+id/currency_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/american_dollar"
            style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"/>
        <TextView
            android:id="@+id/currency_code_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usd_code"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"/>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        app:dividerColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/row_linear_layout"
        android:layout_marginHorizontal="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>